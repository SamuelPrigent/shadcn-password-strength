{
  "name": "shadcn-password-strength",
  "version": "0.1.0",
  "description": "A customizable password strength indicator component for React with multi-language support",
  "author": "Samuel Prigent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SamuelPrigent/shadcn-password-strength"
  },
  "keywords": [
    "react",
    "password",
    "strength",
    "indicator",
    "validation",
    "shadcn",
    "tailwind",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
